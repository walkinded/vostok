  .faq__form
    .container
      .form.form--horizontal.wpcf7
        p.form__title Оставить свой отзыв

        form.wpcf7-form
          .form__df
            .form__col
              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваше имя')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-user")

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Номер телефона')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#icon-phone")

            .form__col
              .form__wrap
                .form__item
                  span.wpcf7-form-control-wrap.your-message.text-input.text-input--icon
                    label(for="your-msg")
                      i.input-icon
                        svg.icon
                          use(xlink:href="img/svg/sprite.svg#form-msg")

                      span Сообщение

                    textarea.wpcf7-form-control.wpcf7-text.wpcf7-message#your-msg(name='your-message', cols="40", rows="10", aria-required='true', aria-invalid='false', placeholder="")

                .form__item.form__item--download
                  label.your-file__label(tabindex='0')
                    span.wpcf7-form-control-wrap.your-file
                      input.wpcf7-form-control.wpcf7-file.wpcf7-validates-as-required.wpcf7-resume(type='file', name='your-resume', size='40', accept='.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.ppt,.pptx,.odt,.avi,.ogg,.m4a,.mov,.mp3,.mp4,.mpg,.wav,.wmv', aria-required='true', aria-invalid='false')
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#icon-download")

          .form__item.form__item--submit
            .btn__wrap
              input.wpcf7-form-control.wpcf7-submit.btn.btn--red(type='submit', value='Отправить')

